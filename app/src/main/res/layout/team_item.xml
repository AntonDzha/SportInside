<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorDarkGreen"
    >

    <ImageView
        android:id="@+id/team_img"
        android:text="image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/strTeam"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="strTeam"
        android:textColor="#fff"
        />
    <TextView

        android:text="Sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/strSport"
        android:text="strSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <TextView
        android:text="Formed Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:text="strFormed Year"
        android:id="@+id/formedYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <TextView
        android:text="Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/strCountry"
        android:text="strCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>

    <TextView
        android:text="League"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/strLeague"
        android:text="strLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <TextView

        android:text="Keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/strKeywords"
        android:text="strKeywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>

    <TextView
        android:text="Stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/strStadium"
        android:text="strCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"/>
    <TextView
        android:id="@+id/descr"
        android:text="descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>

    <TextView

        android:text="Twitter and Instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"
        />
    <TextView
        android:id="@+id/strTwitter"
        android:text="strTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/strInstagram"
        android:text="strInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>

</LinearLayout>